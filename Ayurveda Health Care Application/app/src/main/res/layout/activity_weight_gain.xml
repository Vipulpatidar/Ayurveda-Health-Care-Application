<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeightGain"
    android:background="@color/peach">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backto"
            android:layout_width="48dp"
            android:layout_height="38dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/backd" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Weight Gain Methods"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_gravity="center_vertical"

            android:src="@drawable/srch" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="25dp"
        android:background="@color/peach">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="175dp"
                android:layout_height="155dp"
                android:gravity="center">

                <ImageView

                    android:id="@+id/milk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
android:padding="5dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/milk"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/milk"
                    android:layout_marginLeft="65dp"
                    android:text="MILK"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

            </RelativeLayout>
<RelativeLayout
    android:layout_width="175dp"
    android:layout_height="155dp"
    android:gravity="center">

    <ImageView

        android:id="@+id/nuts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:padding="5dp"
        android:src="@drawable/nuts"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUTS"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/nuts"
        android:layout_marginLeft="65dp"
        android:textColor="@color/black"/>


</RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="155dp"
            android:gravity="center">

            <ImageView

                android:id="@+id/potatoes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:foregroundGravity="center"
                android:src="@drawable/pat"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Potatoes"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/potatoes"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="155dp"
            android:gravity="center">

            <ImageView

                android:id="@+id/bread"
                android:layout_width="match_parent"
android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:src="@drawable/bread"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grain Bread"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/bread"
                android:layout_marginLeft="45dp"
                android:textColor="@color/black"/>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="250dp"
            android:gravity="center">

            <ImageView

                android:id="@+id/Avocados"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:foregroundGravity="center"
                android:src="@drawable/av"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avocados"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/Avocados"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="245dp"
            android:layout_height="250dp"
            android:gravity="center">

            <ImageView

                android:id="@+id/Cheese"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:foregroundGravity="center"
                android:src="@drawable/ch"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheese"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/Cheese"
                android:layout_marginLeft="45dp"
                android:textColor="@color/black"/>


        </RelativeLayout>

    </LinearLayout> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:gravity="center">

        <ImageView

            android:id="@+id/Granola"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:foregroundGravity="center"
            android:src="@drawable/gn"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Granola"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/Granola"
            android:layout_marginLeft="65dp"
            android:textColor="@color/black"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="245dp"
        android:layout_height="250dp"
        android:gravity="center">

        <ImageView

            android:id="@+id/ProteinBars"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:foregroundGravity="center"
            android:src="@drawable/bread"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Protein Bars"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_below="@+id/ProteinBars"
            android:layout_marginLeft="45dp"
            android:textColor="@color/black"/>


    </RelativeLayout>

</LinearLayout>
</LinearLayout>
    </ScrollView>


</LinearLayout>

